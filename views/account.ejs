<%- include('partials/header') %>
	<div class="container">
		<% if (user && user.username===account) { %>
			<h4 class="mx-3 mt-3">Hello, <%= account %>! Your recipes:</h4>
		<% } else { %>
			<h4 class="mx-3 mt-3">Recipes By: <%= account %></h4>
		<% } %>
		<div class="row mt-2">
			<% recipes.forEach((recipe) => { %>
				<div class="card m-3">
					<a href="/recipes/<%= recipe._id %>">
						<img class="card-img-top card-img" src="data:image/<%=recipe.image.contentType%>;base64,<%=recipe.image.data.toString('base64')%>" alt="Picture of the food">
					</a>
					<h3 class="card-title mt-3"><%= recipe.title %></h3>
					<p class="card-text mb-3 mx-3"> <%= recipe.description %></p>
				</div>
			<% }) %>
		</div>
	</div>
<%- include('partials/footer') %>